<%= form_with model: model, local:true do |f| %>
<%= render "layouts/error.messages", model: f.object %>
  <div class= "field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class= "field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div class= "field">
    <%= f.submit button %>
  </div>
<% end %>